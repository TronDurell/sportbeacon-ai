{
  "dashboard": {
    "id": null,
    "title": "SportBeaconAI Dashboard",
    "tags": ["sportbeacon", "ai", "sports"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"sportbeacon-backend\"}",
            "legendFormat": "Backend"
          },
          {
            "expr": "up{job=\"sportbeacon-frontend\"}",
            "legendFormat": "Frontend"
          },
          {
            "expr": "up{job=\"postgres\"}",
            "legendFormat": "Database"
          },
          {
            "expr": "up{job=\"redis\"}",
            "legendFormat": "Redis"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "API Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_request_duration_seconds_sum[5m]) / rate(http_request_duration_seconds_count[5m])",
            "legendFormat": "{{method}} {{route}}"
          }
        ],
        "yAxes": [
          {
            "label": "Response Time (seconds)",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{route}}"
          }
        ],
        "yAxes": [
          {
            "label": "Requests per second",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"4..|5..\"}[5m])",
            "legendFormat": "{{status}} {{route}}"
          }
        ],
        "yAxes": [
          {
            "label": "Errors per second",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends",
            "legendFormat": "{{datname}}"
          }
        ],
        "yAxes": [
          {
            "label": "Active Connections",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Redis Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "redis_memory_used_bytes",
            "legendFormat": "Memory Used"
          }
        ],
        "yAxes": [
          {
            "label": "Memory (bytes)",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 7,
        "title": "AI Service Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ai_summary_generation_duration_seconds_sum[5m]) / rate(ai_summary_generation_duration_seconds_count[5m])",
            "legendFormat": "Summary Generation"
          },
          {
            "expr": "rate(voice_feedback_generation_duration_seconds_sum[5m]) / rate(voice_feedback_generation_duration_seconds_count[5m])",
            "legendFormat": "Voice Feedback"
          }
        ],
        "yAxes": [
          {
            "label": "Duration (seconds)",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "User Activity",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(user_sessions_total[5m])",
            "legendFormat": "Active Sessions"
          },
          {
            "expr": "rate(user_logins_total[5m])",
            "legendFormat": "Logins"
          }
        ],
        "yAxes": [
          {
            "label": "Events per second",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      },
      {
        "id": 9,
        "title": "BEACON Token Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "beacon_tokens_minted_total",
            "legendFormat": "Total Minted"
          },
          {
            "expr": "beacon_tokens_burned_total",
            "legendFormat": "Total Burned"
          },
          {
            "expr": "beacon_tokens_circulating",
            "legendFormat": "Circulating Supply"
          }
        ],
        "yAxes": [
          {
            "label": "BEACON Tokens",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32}
      },
      {
        "id": 10,
        "title": "Highlights and Social Activity",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(highlights_uploaded_total[5m])",
            "legendFormat": "Highlights Uploaded"
          },
          {
            "expr": "rate(highlights_views_total[5m])",
            "legendFormat": "Highlight Views"
          },
          {
            "expr": "rate(social_interactions_total[5m])",
            "legendFormat": "Social Interactions"
          }
        ],
        "yAxes": [
          {
            "label": "Events per second",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32}
      },
      {
        "id": 11,
        "title": "System Resources",
        "type": "graph",
        "targets": [
          {
            "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU Usage %"
          },
          {
            "expr": "100 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes * 100)",
            "legendFormat": "Memory Usage %"
          }
        ],
        "yAxes": [
          {
            "label": "Usage %",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 40}
      },
      {
        "id": 12,
        "title": "Network Traffic",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total[5m])",
            "legendFormat": "{{device}} - Receive"
          },
          {
            "expr": "rate(node_network_transmit_bytes_total[5m])",
            "legendFormat": "{{device}} - Transmit"
          }
        ],
        "yAxes": [
          {
            "label": "Bytes per second",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 40}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "5s",
        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h",
        "2h",
        "1d"
      ]
    },
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "query": "label_values(up, job)",
          "refresh": 2
        },
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up{job=\"$service\"}, instance)",
          "refresh": 2
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "expr": "changes(up[1m]) > 0",
          "iconColor": "rgba(255, 255, 255, 0.5)",
          "titleFormat": "Service Status Change"
        }
      ]
    },
    "refresh": "30s",
    "schemaVersion": 16,
    "version": 1
  }
} 