# Web3 Configuration for SportBeacon AI
# Copy this file to .env and fill in your actual values

# Alchemy API Configuration
ALCHEMY_API_KEY=your_alchemy_api_key_here
NETWORK=polygon-mumbai
CHAIN_ID=80001
RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/your_alchemy_api_key_here
EXPLORER_URL=https://mumbai.polygonscan.com

# Contract Addresses (for future use)
SPORTBEACON_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000
REWARDS_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Web3 Authentication
JWT_SECRET=your_jwt_secret_here
AUTH_MESSAGE="Welcome to SportBeacon AI! Please sign this message to authenticate your wallet."

# WalletConnect Configuration (for future mobile support)
WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Gas Settings
GAS_LIMIT=300000
GAS_PRICE=20000000000  # 20 gwei

# Feature Flags
ENABLE_WEB3_AUTH=true
ENABLE_NFT_REWARDS=false
ENABLE_TOKEN_REWARDS=false

# Stripe Configuration (for tipping system)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Connect Configuration (for payout system)
STRIPE_CLIENT_ID=ca_your_stripe_connect_client_id_here
STRIPE_CONNECT_WEBHOOK_SECRET=whsec_your_connect_webhook_secret_here

# Application URLs
BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Tipping System Configuration
TIP_MIN_AMOUNT=0.50
TIP_MAX_AMOUNT=1000.00
TIP_PLATFORM_FEE_PERCENT=2.9  # 2.9% platform fee
TIP_PLATFORM_FEE_FIXED=0.30   # $0.30 fixed fee

# Payout System Configuration
PAYOUT_MIN_AMOUNT=10.00
PAYOUT_MAX_AMOUNT=10000.00
PAYOUT_PROCESSING_FEE=0.25    # $0.25 per payout
PAYOUT_CURRENCY=usd

# Admin Configuration
ADMIN_TOKEN=admin-secret-token-change-in-production
ADMIN_EMAIL=admin@sportbeacon.ai

# Production Stripe Configuration (uncomment for production)
# STRIPE_PUBLISHABLE_KEY=pk_live_your_live_stripe_publishable_key_here
# STRIPE_SECRET_KEY=sk_live_your_live_stripe_secret_key_here
# STRIPE_WEBHOOK_SECRET=whsec_your_live_webhook_secret_here
# STRIPE_CLIENT_ID=ca_your_live_stripe_connect_client_id_here
# STRIPE_CONNECT_WEBHOOK_SECRET=whsec_your_live_connect_webhook_secret_here

# Production URLs (uncomment for production)
# BASE_URL=https://api.sportbeacon.ai
