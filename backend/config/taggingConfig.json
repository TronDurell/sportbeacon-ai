{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tagging Configuration",
  "type": "object",
  "properties": {
    "clutch_threshold_secs": {
      "type": "integer",
      "description": "Threshold in seconds for clutch situations",
      "default": 120
    },
    "hot_streak_window_secs": {
      "type": "integer",
      "description": "Time window in seconds for hot streaks",
      "default": 120
    },
    "momentum_run_threshold": {
      "type": "integer",
      "description": "Point threshold for momentum runs",
      "default": 10
    },
    "defensive_impact_threshold": {
      "type": "integer",
      "description": "Threshold for defensive impact plays",
      "default": 2
    },
    "impact_scores": {
      "type": "object",
      "properties": {
        "three_pointer": { "type": "integer", "default": 15 },
        "two_pointer": { "type": "integer", "default": 10 },
        "block": { "type": "integer", "default": 12 },
        "steal": { "type": "integer", "default": 8 },
        "clutch_bonus": { "type": "integer", "default": 25 },
        "streak_bonus": { "type": "integer", "default": 15 },
        "momentum_bonus": { "type": "integer", "default": 20 },
        "close_game_bonus": { "type": "integer", "default": 15 },
        "fourth_quarter_bonus": { "type": "integer", "default": 10 }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "clutch_threshold_secs",
    "hot_streak_window_secs",
    "momentum_run_threshold",
    "defensive_impact_threshold",
    "impact_scores"
  ],
  "additionalProperties": false
} 