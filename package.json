{
  "name": "sportbeacon-ai",
  "version": "1.0.0",
  "description": "AI-powered sports analytics and training platform",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:ios": "eas build --platform ios",
    "build:android": "eas build --platform android",
    "submit:ios": "eas submit --platform ios",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage && node scripts/generate-coverage-summary.js",
    "test:badge": "npm run test:coverage && npx coverage-badges-cli",
    "test:ci": "jest --coverage --ci --watchAll=false --passWithNoTests --coverageThreshold",
    "test:threshold": "jest --coverage --passWithNoTests --coverageThreshold",
    "test:e2e": "ts-node scripts/e2e-test.ts",
    "test:e2e:10x": "ts-node scripts/e2e-10x.ts",
    "test:chapters": "jest __tests__/chapters.test.ts --coverage",
    "test:i18n": "jest __tests__/i18n.test.ts --coverage",
    "test:grants": "jest __tests__/grants.test.ts --coverage",
    "test:edu": "jest __tests__/edu.test.ts --coverage",
    "test:studio": "jest __tests__/studio.test.ts --coverage",
    "test:civic": "jest __tests__/civic.test.ts --coverage",
    "test:vanguard": "jest __tests__/chapters.test.ts __tests__/i18n.test.ts __tests__/grants.test.ts __tests__/edu.test.ts __tests__/studio.test.ts __tests__/civic.test.ts --coverage",
    "lint": "next lint",
    "verify-ai": "node scripts/verify-ai.js"
  },
  "dependencies": {
    "@expo/vector-icons": "^13.0.0",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "@stripe/stripe-react-native": "^0.35.0",
    "@tensorflow/tfjs": "^4.11.0",
    "@twilio/voice-sdk": "^2.14.0",
    "expo": "~49.0.0",
    "expo-av": "~13.4.1",
    "expo-camera": "~13.4.4",
    "expo-constants": "~14.4.2",
    "expo-device": "~5.4.0",
    "expo-linking": "~5.0.2",
    "expo-location": "~16.1.0",
    "expo-notifications": "~0.20.1",
    "expo-splash-screen": "~0.20.5",
    "expo-status-bar": "~1.6.0",
    "expo-updates": "~0.18.17",
    "firebase": "^10.7.1",
    "lottie-react-native": "^7.2.3",
    "react": "18.2.0",
    "react-native": "0.72.6",
    "react-native-gesture-handler": "~2.12.0",
    "react-native-reanimated": "~3.3.0",
    "react-native-safe-area-context": "4.6.3",
    "react-native-screens": "~3.22.0",
    "rive-react-native": "^9.3.4"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "~18.2.14",
    "@types/react-native": "~0.72.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "coverage-badges-cli": "^2.1.0",
    "eslint": "^8.19.0",
    "jest": "^29.2.1",
    "jest-environment-jsdom": "^30.0.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.3"
  },
  "private": true,
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testRegex": "__tests__/.*\\.test\\.ts$",
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|@react-navigation|react-native-reanimated|react-native-gesture-handler|react-native-safe-area-context|react-native-screens)/)"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/lib/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "collectCoverageFrom": [
      "lib/**/*.{ts,tsx}",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/__tests__/**",
      "!frontend/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
